<form name="service" method="post" action="{{form_action}}">
    <div id="{{alerts_id | default('form-alerts')}}">
    </div>
    <div class="row">
        {% if 'name_th' not in fields.hidden %}
        <div class="col-sm-12">
            <div class="form-group">
                <label>Service name TH</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                    <input type="text" class="form-control" id="name_th" name="name_th" autocomplete="off" value="{{service.name_th}}" placeholder="Please enter the Thai service name" {% if 'name_th' in fields.disabled %}disabled{% endif %}>
                </div>
            </div>
        </div>
        {% endif %}
        {% if 'name_en' not in fields.hidden %}
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Service name EN</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" id="name_en" name="name_en" autocomplete="off" value="{{service.name_en}}" placeholder="Please enter the English service name" {% if 'name_en' in fields.disabled %}disabled{% endif %}>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if 'name_cn' not in fields.hidden %}
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Sb name CN</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" id="name_cn" name="name_cn" autocomplete="off" value="{{service.name_cn}}" placeholder="Please enter the China service name" {% if 'name_cn' in fields.disabled %}disabled{% endif %}>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if 'detail_th' not in fields.hidden %}
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Detail TH</label>
                    <!-- <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" id="name_cn" name="name_cn" autocomplete="off" value="{{service.name_cn}}" placeholder="Please enter the China service name" {% if 'name_cn' in fields.disabled %}disabled{% endif %}>
                    </div> -->
                    <textarea rows=3 class="form-control" id="detail_th" name="detail_th" placeholder="Company detail in Thai." {% if 'detail_th' in fields.disabled %}disabled{% endif %}>{{ service.detail_th }}</textarea>
                </div>
            </div>
        {% endif %}  
        {% if 'detail_en' not in fields.hidden %}
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Detail EN</label>
                    <!-- <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" id="name_cn" name="name_cn" autocomplete="off" value="{{service.name_cn}}" placeholder="Please enter the China service name" {% if 'name_cn' in fields.disabled %}disabled{% endif %}>
                    </div> -->
                    <textarea rows=3 class="form-control" id="detail_en" name="detail_en" placeholder="Company detail in Thai." {% if 'detail_en' in fields.disabled %}disabled{% endif %}>{{ service.detail_en }}</textarea>
                </div>
            </div>
        {% endif %} 
        {% if 'detail_cn' not in fields.hidden %}
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Detail CN</label>
                    <!-- <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" id="name_cn" name="name_cn" autocomplete="off" value="{{service.name_cn}}" placeholder="Please enter the China service name" {% if 'name_cn' in fields.disabled %}disabled{% endif %}>
                    </div> -->
                    <textarea rows=3 class="form-control" id="detail_cn" name="detail_cn" placeholder="Company detail in Thai." {% if 'detail_cn' in fields.disabled %}disabled{% endif %}>{{ service.detail_cn }}</textarea>
                </div>
            </div>
        {% endif %}       
        {% if 'price_TH' not in fields.hidden %}
            <div class="col-sm-6">
                <div class="form-group ">
                    <label>Price Thai</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" id="price_TH" name="price_TH" autocomplete="off" value="{{service.price_TH}}" placeholder="" {% if 'price_TH' in fields.disabled %}disabled{% endif %}>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if 'price_foreigner' not in fields.hidden %}
            <div class="col-sm-6">
                <div class="form-group ">
                    <label>Price Foreigner</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" id="price_foreigner" name="price_foreigner" autocomplete="off" value="{{service.price_foreigner}}" placeholder="" {% if 'price_foreigner' in fields.disabled %}disabled{% endif %}>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if 'duration' not in fields.hidden %}
            <div class="col-sm-6">
                <div class="form-group ">
                    <label>Duration</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" id="duration" name="duration" autocomplete="off" value="{{service.duration}}" placeholder="" {% if 'duration' in fields.disabled %}disabled{% endif %}>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if 'customer_quantity' not in fields.hidden %}
            <div class="col-sm-6">
                <div class="form-group ">
                    <label>Customer Quantity</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" id="customer_quantity" name="customer_quantity" autocomplete="off" value="{{service.customer_quantity}}" placeholder="" {% if 'customer_quantity' in fields.disabled %}disabled{% endif %}>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if 'max_customer_support' not in fields.hidden %}
            <div class="col-sm-6">
                <div class="form-group ">
                    <label>max Customer Support</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" id="max_customer_support" name="max_customer_support" autocomplete="off" value="{{service.max_customer_support}}" placeholder="" {% if 'max_customer_support' in fields.disabled %}disabled{% endif %}>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="col-sm-6">
            <div class="form-group ">
                <label>Last Updated</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="text" class="form-control" name="updated_at" autocomplete="off" value="{% if service.updated_at %}{{service.updated_at | date('M j, Y g:i a')}}{% else %}Never{% endif %}" disabled>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group ">
                <label>Created Since</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="text" class="form-control" name="created_at" autocomplete="off" value="{% if service.created_at %}{{service.created_at | date('M j, Y g:i a')}}{% else %}Unknown{% endif %}" disabled>
                </div>
            </div>
        </div>
        {% if 'branches' not in fields.hidden %}
            <div class="col-sm-6">
                <h5>Branches</h5>
                <ul class="list-group permission-summary-rows">
                    {% for branch in branches %}
                        <li class="list-group-item">
                            {{branch.name_th}}
                            <span class="pull-right">
                      <input type="checkbox" name="branches[{{branch.id}}]" class="form-control bootstrapswitch" data-id="{{branch.id}}" {% if branch.member %}checked{% endif %} {% if 'branches' in fields.disabled %}disabled{% endif %}>
                                {% if 'primary_group_id' not in fields.hidden %}
                                    {#<button type="button" class="bootstrapradio btn btn-xs" name="primary_group_id" value="{{branch.id}}" title="Set as primary group" data-selected="{% if branch.id == target_user.primary_group_id %}true{% else %}false{% endif %}" {% if not branch.member or 'primary_group_id' in fields.disabled %}disabled{% endif %}>#}
                                        {#<i class="fa fa-home"></i>#}
                                    {#</button>#}
                                {% endif %}
                    </span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div><br>
    <div class="row">
        {% if "submit" not in buttons.hidden %}
        <div class="col-xs-8 col-sm-4">
            <div class="vert-pad">
                <button type="submit" class="btn btn-block btn-lg btn-success">
                    {{submit_button}}
                </button>
            </div>
        </div>
        {% endif %}
        {% if "edit" not in buttons.hidden %}
        <div class="col-xs-6 col-sm-3">
            <div class="vert-pad">
                <button type="button" class="btn btn-block btn-md btn-primary js-service-edit" data-id="{{service.id}}" data-toggle="modal">
                    <i class="fa fa-edit"></i> Edit
                </button>
            </div>
        </div>
        {% endif %}
        {% if "enable" not in buttons.hidden %}
        <div class="col-xs-6 col-sm-3">
            <div class="vert-pad">
                {% if service.status == "1" %}
                    <button type="button" class="btn btn-block btn-md btn-warning js-service-disable" data-id="{{service.id}}">
                        <i class="fa fa-minus-circle"></i> Disable
                    </button>
                {% else %}
                    <button type="button" class="btn btn-block btn-md btn-warning js-service-enable" data-id="{{service.id}}">
                        <i class="fa fa-plus-circle"></i> Enable
                    </button>
                {% endif %}
            </div>
        </div>
        {% endif %}
        {% if "delete" not in buttons.hidden %}
        <div class="col-xs-6 col-sm-3">
            <div class="vert-pad">
                <button type="button" class="btn btn-block btn-md btn-danger js-service-delete" data-id="{{service.id}}" data-user_name="{{service.user_name}}" data-toggle="modal">
                    <i class="fa fa-trash-o"></i> Delete
                </button>
            </div>
        </div>
        {% endif %}
        {% if "cancel" not in buttons.hidden %}
        <div class="col-xs-4 col-sm-3 pull-right">
            <div class="vert-pad">
                <button type="button" class="btn btn-block btn-lg btn-link" data-dismiss="modal">Cancel</button>
            </div>
        </div>
        {% endif %}
    </div>
</form>
<script>
// Load the validator rules for this form
var validators = {{validators | raw}};
</script>
