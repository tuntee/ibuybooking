                                    {#<button type="button" class="bootstrapradio btn btn-xs" name="primary_group_id" value="{{group.id}}" title="Set as primary group" data-selected="{% if group.id == target_user.primary_group_id %}true{% else %}false{% endif %}" {% if not group.member or 'primary_group_id' in fields.disabled %}disabled{% endif %}>#}
                                        {#<i class="fa fa-home"></i>#}
                                    {#</button>#}
                                {#{% endif %}#}
                    </span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        {% if 'allow_refund' not in fields.hidden %}
            <div class="col-sm-6">
                <h5>Allow refund</h5>
                <ul class="list-group permission-summary-rows">
                    {% for group in allow_refund %}
                        <li class="list-group-item">
                            {{group.name}}
                            <span class="pull-right">
                      <input type="checkbox" name="allow_refund[{{group.id}}]" class="form-control bootstrapswitch" data-id="{{group.id}}" {% if group.member %}checked{% endif %} {% if 'allow_refund' in fields.disabled %}disabled{% endif %}>
                                {#{% if 'primary_group_id' not in fields.hidden %}#}
                                    {#<button type="button" class="bootstrapradio btn btn-xs" name="primary_group_id" value="{{group.id}}" title="Set as primary group" data-selected="{% if group.id == target_user.primary_group_id %}true{% else %}false{% endif %}" {% if not group.member or 'primary_group_id' in fields.disabled %}disabled{% endif %}>#}
                                        {#<i class="fa fa-home"></i>#}
                                    {#</button>#}
                                {#{% endif %}#}
                    </span>
                        </li>
                    {% endfor %}
                </ul>
                {#<div class="form-group ">#}
                    {#<label>Allow refund</label>#}
                    {#<div class="input-group">#}
                        {#<span class="input-group-addon"><i class="fa fa-edit"></i></span>#}
                        {#<input type="text" class="form-control" id="allow_refund" name="allow_refund" autocomplete="off" value="{{company.allow_refund}}" placeholder="" {% if 'allow_refund' in fields.disabled %}disabled{% endif %}>#}
                    {#</div>#}
                {#</div>#}
            </div>
        {% endif %}
        {% if 'auto_send_sale_report' not in fields.hidden %}
        <div class="col-sm-12">
            <div class="form-group ">
                <label>Auto send sale report to email</label>
                {#<div class="input-group">#}
                    {#<span class="input-group-addon"><i class="fa fa-edit"></i></span>#}
                <input type="checkbox" name="auto_send_sale_report" class="form-control bootstrapswitch" {% if company.auto_send_sale_report == 1 %}checked{% endif %} {% if 'auto_send_sale_report' in fields.disabled %}disabled{% endif %}>
                    {#<textarea rows=3 class="form-control" id="auto_send_sale_report" name="auto_send_sale_report" placeholder="Company detail in Thai." {% if 'auto_send_sale_report' in fields.disabled %}disabled{% endif %}>{{ company.company_detail_th }}</textarea>#}
                    {#<input type="text" class="form-control" name="display_name" autocomplete="off" value="{{company.display_name}}" placeholder="Please enter the display name" {% if 'display_name' in fields.disabled %}disabled{% endif %}>#}
                {#</div>#}
            </div>
        </div>
        {% endif %}
        {% if 'auto_delete_and_export' not in fields.hidden %}
            <div class="col-sm-6">
                <div class="form-group ">
                    <label>Auto Delete and Export</label>
                    {#<div class="input-group">#}
                    {#<span class="input-group-addon"><i class="fa fa-edit"></i></span>#}
                    <input type="checkbox" name="auto_delete_and_export" class="form-control bootstrapswitch" {% if company.auto_delete_and_export == 1 %}checked{% endif %} {% if 'auto_delete_and_export' in fields.disabled %}disabled{% endif %}>
                    {#<textarea rows=3 class="form-control" id="auto_delete_and_export" name="auto_delete_and_export" placeholder="Company detail in English." {% if 'auto_delete_and_export' in fields.disabled %}disabled{% endif %}>{{ company.company_detail_en }}</textarea>#}
                    {#<input type="text" class="form-control" name="display_name" autocomplete="off" value="{{company.display_name}}" placeholder="Please enter the display name" {% if 'display_name' in fields.disabled %}disabled{% endif %}>#}
                    {#</div>#}
                </div>
            </div>
        {% endif %}
        {% if 'keep_sale_summary' not in fields.hidden %}
            <div class="col-sm-12">
                <div class="form-group ">
                    <label>Keep sale summary every Month for send to e-mail</label>
                    {#<div class="input-group">#}
                    {#<span class="input-group-addon"><i class="fa fa-edit"></i></span>#}
                    <input type="checkbox" name="keep_sale_summary" class="form-control bootstrapswitch" {% if company.keep_sale_summary == 1 %}checked{% endif %} {% if 'keep_sale_summary' in fields.disabled %}disabled{% endif %}>
                    {#<textarea rows=3 class="form-control" id="company_detail_cn" name="company_detail_cn" placeholder="Company detail in Thai." {% if 'company_detail_cn' in fields.disabled %}disabled{% endif %}>{{ company.company_detail_cn }}</textarea>#}
                    {#<input type="text" class="form-control" name="display_name" autocomplete="off" value="{{company.display_name}}" placeholder="Please enter the display name" {% if 'display_name' in fields.disabled %}disabled{% endif %}>#}
                    {#</div>#}
                </div>
            </div>
        {% endif %}
        {#<div class="col-sm-6">#}
            {#<div class="form-group ">#}
                {#<label>Last Updated</label>#}
                {#<div class="input-group">#}
                    {#<span class="input-group-addon"><i class="fa fa-calendar"></i></span>#}
                    {#<input type="text" class="form-control" name="last_sign_in_time" autocomplete="off" value="{% if company.last_sign_in_time %}{{company.last_sign_in_time | date('M j, Y g:i a')}}{% else %}Brand new!{% endif %}" disabled>#}
                {#</div>#}
            {#</div>#}
        {#</div>#}
        {#<div class="col-sm-6">#}
