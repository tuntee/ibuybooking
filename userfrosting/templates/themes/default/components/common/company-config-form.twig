<form name="user" method="post" action="{{form_action}}">
    <div id="{{alerts_id | default('form-alerts')}}">
    </div>
    <div class="row">
        {% if 'payment_option_online' not in fields.hidden %}
        <div class="col-sm-12">
            <div class="form-group">
                <label>Payment option online</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                    <select id="payment_option_online" class='form-control select2' name="payment_option_online" {% if 'payment_option_online' in fields.disabled %}disabled{% endif %}>

                            <option value="transfer_via_bank" {% if (company.payment_option_online == "Transfer_via_bank") %}selected{% endif %}>Transfer via Bank</option>
                            <option value="Credit_card" {% if (company.payment_option_online == "Credit_card") %}selected{% endif %}>Credit card</option>
                            <option value="PayPal" {% if (company.payment_option_online == "PayPal") %}selected{% endif %}>PayPal</option>

                    </select>
                    {#<input type="text" class="form-control" id="company_name_th" name="company_name_th" autocomplete="off" value="{{company.company_name_th}}" placeholder="Please enter the Thai company name" {% if 'company_name_th' in fields.disabled %}disabled{% endif %}>#}
                </div>
            </div>
        </div>
        {% endif %}
        {% if 'payment_option_offline' not in fields.hidden %}
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Payment option offline</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <select id="payment_option_offline" class='form-control select2' name="payment_option_offline" {% if 'payment_option_offline' in fields.disabled %}disabled{% endif %}>

                            <option value="transfer_via_bank" {% if (company.payment_option_offline == "Transfer_via_bank") %}selected{% endif %}>Transfer via Bank</option>
                            <option value="Credit_card" {% if (company.payment_option_offline == "Credit_card") %}selected{% endif %}>Credit card</option>
                            <option value="PayPal" {% if (company.payment_option_offline == "PayPal") %}selected{% endif %}>PayPal</option>

                        </select>
                        {#<input type="text" class="form-control" id="company_name_th" name="company_name_th" autocomplete="off" value="{{company.company_name_th}}" placeholder="Please enter the Thai company name" {% if 'company_name_th' in fields.disabled %}disabled{% endif %}>#}
                    </div>
                </div>
            </div>
        {% endif %}
        {% if 'accept_all_booking' not in fields.hidden %}
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Accept all booking</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="checkbox" name="accept_all_booking" class="form-control bootstrapswitch" {% if company.accept_all_booking == 1 %}checked{% endif %} {% if 'accept_all_booking' in fields.disabled %}disabled{% endif %}>
                        {#<input type="text" class="form-control" id="company_name_en" name="company_name_en" autocomplete="off" value="{{company.company_name_en}}" placeholder="Please enter the English company name" {% if 'company_name_en' in fields.disabled %}disabled{% endif %}>#}
                    </div>
                </div>
            </div>
        {% endif %}
        {% if 'time_cancel_reservation' not in fields.hidden %}
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Time to Cancel reservation</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" style="width: 90px;margin-right:5px;" id="time_cancel_reservation" name="time_cancel_reservation" autocomplete="off" value="{{company.time_cancel_reservation}}" placeholder="Please enter the China company name" {% if 'time_cancel_reservation' in fields.disabled %}disabled{% endif %}>
                        <span style="vertical-align: bottom">day</span>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if 'time_offer_booking' not in fields.hidden %}
            <div class="col-sm-6">
                <div class="form-group ">
                    <label>Time to Offer booking</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                        <input type="text" class="form-control" style="width: 90px;margin-right:5px;" id="time_offer_booking" name="time_offer_booking" autocomplete="off" value="{{company.time_offer_booking}}" placeholder="" {% if 'time_offer_booking' in fields.disabled %}disabled{% endif %}>
                        <span style="vertical-align: bottom">minute</span>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if 'allow_edit_order' not in fields.hidden %}
            <div class="col-sm-6">
                <h5>Allow to edit order</h5>
                <ul class="list-group permission-summary-rows">
                    {% for group in allow_edit_order %}
                        <li class="list-group-item">
                            {{group.name}}
                            <span class="pull-right">
                      <input type="checkbox" name="allow_edit_order[{{group.id}}]" class="form-control bootstrapswitch" data-id="{{group.id}}" {% if group.member %}checked{% endif %} {% if 'allow_edit_order' in fields.disabled %}disabled{% endif %}>
